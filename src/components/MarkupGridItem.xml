  </interface>
 
  <script type = "text/brightscript" uri="MarkupGridItem.brs" />

  <children >
    <BusySpinner 
      id = "busySpinner"  
      control = "start"
      uri = "pkg:/images/busyspinner-hd-1-0.png"
      scaleRotateCenter = "[ 256.0, 144.0 ]"
      visible = "true">
    </BusySpinner>
    <Poster 
      id = "itemPoster" 
      translation = "[ 10, 10 ]" 
      width = "512" 
      height = "288" 
      scaleRotateCenter = "[ 256.0, 144.0 ]" >
    </Poster>
    <Label
          id = "itemLabel"
          translation = "[ 24, 313 ]"
          scale = "[ 0.75, 0.75 ]">
    </Label>   
    <Label id = "cameraUUID" visible="false" /> 

  </children>

</component>
