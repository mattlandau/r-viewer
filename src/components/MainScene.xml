<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs" />
    <children>
        <LayoutGroup id="MyLayoutContainer" layoutDirection="vert" visible="true">
            <LayoutGroup layoutDirection="horiz" >
                <LayoutGroup layoutDirection="vert" >
                    <AccountButton />
                    <Label id="APIKeyError" visible="false" text="   Wrong API Key" translation="[200, 0]" />
                    <VideoWallList />
                </LayoutGroup>
                <LayoutGroup layoutDirection="vert">
                    <Label id="TimestampSpacer" text=" " />
                    <LayoutGroup id="MyTimestampGroup" layoutDirection="horiz">
                        <Timestamp id="MyTimestamp" />
                        <BusySpinner id="RefreshingSpinner" visible="false" />
                    </LayoutGroup>
                    <LayoutGroup id="MyGridLoadingSpinnerVerticalGroup" layoutDirection="vert" >
                        <Label id="GridLoadingSpinnerVerticalSpacer" text=" " />
                        <LayoutGroup id="MyGridLoadingSpinnerHorizontalGroup" layoutDirection="horiz">
                            <Label id="GridLoadingSpinnerHorizontalSpacer" text=" " />
                            <BusySpinner id="GridLoadingSpinner" visible="false"/>
                        </LayoutGroup>
                    </LayoutGroup>
                    <MarkupGrid id = "exampleMarkupGrid" translation = "[ 130, 155 ]" itemComponentName = "MarkupGridItem" numColumns = "2" numRows = "5" itemSize = "[ 532, 308 ]" itemSpacing = "[ 30, 32 ]" drawFocusFeedback="true" visible = "true" scale = "[ 0.90, 0.90 ]" />
                    <LayoutGroup id="IncompleteLoadGroup" layoutDirection="horiz" >
                        <Label id="ItemsLoadingSpacer" text=" " />
                        <BusySpinner id="ItemsLoadingSpinner" scale="[ 0.5, 0.5 ]" visible="false"  />
                    </LayoutGroup>
                    <LayoutGroup id="MyZeroDevicesGroup" layoutDirection="horiz">
                        <Label id="ZeroDevicesHorizontalSpacer" text=" " />
                        <Label id="MyZeroDevicesLabel" text="No devices found" font = "font:MediumBoldSystemFont" translation="[ 150, 180 ]" visible="false" />
                    </LayoutGroup>
               </LayoutGroup>
            </LayoutGroup>
        </LayoutGroup>
        <VideoPlayer id="MyVideoPlayer" visible="false"/>
        <Timer id="MyTimer" repeat="true" duration="15" />
    </children>
</component>
